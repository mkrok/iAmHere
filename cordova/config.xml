<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.mkrok.iamhere" version="2.2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>iAmHere</name>
    <description>
        geolocation + chat.
    </description>
    <author email="miroslaw.krokv@gmail.com">
        mkrok
    </author>
    <preference name="loadUrlTimeoutValue" value="700000" />
    <content src="main.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="www/res/iAmHere.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
